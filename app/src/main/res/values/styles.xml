<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="IconTip">
        <item name="android:textColor">@color/secondary_text_gray</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="GridItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40dp</item>
    </style>

    <color name="background">#E8E1E7</color>
    <color name="card">#FFFFFF</color>
    <color name="card_border_light">#E8E8E8</color>

    <color name="text">#5C5C5C</color>
    <color name="actionbar_text">#FAFAFA</color>

    <color name="primary">#E0A6C6</color>
    <color name="primary_dark">#C47AA3</color>
    <color name="accent">#E0A6C6</color>

    <color name="background_green">#dcedc8</color>
    <color name="secondary_text_gray">#9E9E9E</color>
    <color name="primary_text_gray">#212121</color>

</resources>
